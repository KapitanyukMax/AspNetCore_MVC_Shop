@model List<DataAccess.Entities.Item>

<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Cart Items List</h5>

        <ul>
            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center my-2">
                    @item.Name
                    <span class="badge bg-primary rounded-pill">@item.Price$</span>
                </li>
            }
        </ul>
        <div>
            <a href="#" class="btn btn-primary">Confirm</a>
        </div>
        <div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-2">Continue Shopping</a>
        </div>
    </div>
    <div class="card-footer text-muted">
        Total: <span class="badge bg-pimary">@Model.Sum(i => i.Price)$</span>
    </div>
</div>