@model DataAccess.Entities.Item;

<h1>Edit Item Information</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price">
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Discount" class="form-label">Discount</label>
        <input asp-for="Discount" type="number" step="0.1" class="form-control" placeholder="Enter discount">
        <span asp-validation-for="Discount" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Rating" class="form-label">Rating</label>
        <input asp-for="Rating" type="number" class="form-control" placeholder="Enter rating">
        <span asp-validation-for="Rating" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
            <option disabled selected>Choose category...</option>
        </select>
    </div>
    <div class="col-12 mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImagePath" class="form-label">Image Path</label>
        <input asp-for="ImagePath" type="url" class="form-control" placeholder="Enter image url address">
        <span asp-validation-for="ImagePath" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <a asp-action="Index" class="btn btn-secondary w-75 m-auto">Cancel</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-warning w-75 m-auto">Edit</button>
    </div>
</form>