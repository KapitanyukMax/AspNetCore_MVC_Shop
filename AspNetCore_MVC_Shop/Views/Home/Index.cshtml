@model List<DataAccess.Entities.Item>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img height="200" class="card-img-top object-fit-contain" src="@item.ImagePath" alt="..." />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: @item.Price$ Category: @item.Category.Name</p>
                    <a asp-controller="Cart" asp-action="Add" asp-route-itemId="@item.Id" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>